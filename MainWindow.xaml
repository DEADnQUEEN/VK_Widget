<Window x:Class="my_app_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:my_app_1"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        x:Name="win"
        Topmost="True"
        Title="MainWindow" Height="Auto" Width="Auto" MouseDown="Window_MouseDown" Background="{x:Null}">
    <Border Background="#B2303030" BorderBrush="Gray" CornerRadius="20">
        <Grid>
            <Grid x:Name="qr"/>
            <Label x:Name="Lb1" Margin="20" FontSize="20" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>
